@model SpeedItUp.Models.Slot

@{
    ViewData["Title"] = "Book a slot";
}

<div>
    <div class="row">
        <h1 class="offset-md-3">@ViewData["Title"]</h1>
    </div>  
</div>
<body>
    <div class="container" id="booking">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Time)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Time)
            </dd>
        </dl>
        <div class="row">
            <h2 class="offset-md-3">Choose a child</h2>
        </div>

        <div class="row">

            <form class="offset-md-3 col-md-6">
                @foreach (var ch in Model.Children)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input checkbox-child" id="cb-1">
                        <label class="custom-control-label" for="cb-1">@ch.FullName</label>
                    </div>
                }

                <div class=" text-center">
                    <button id="book-button" class="btn btn-primary">Book</button>
                </div>
            </form>
        </div>

    </div>
</body>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to Schedule page</a>
</div>
