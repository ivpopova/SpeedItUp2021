@model SpeedItUp.Models.AddToSlotViewModel

@{
    ViewData["Title"] = "Add To Slot";
}

<h1>Add to Slot</h1>


<body>
    <div class="row">
        <h2 class="offset-md-3" id="slot-information">
        @Model.Date
        </h2>
    </div>

    <div class="row">
        <h3 class="offset-md-3">Choose a child</h3>
    </div>

    <div class="container" id="booking">
        <form asp-action="AddToSlot" class="offset-md-3 col-md-6">

            @foreach (var item in Model.Children)
            {
            <div class="custom-control custom-checkbox">
                <input name="ChildIDs" type="checkbox" class="custom-control-input checkbox-child" id="@item.Id" value="@item.Id">
                <label class="custom-control-label" for="@item.Id"> @item.FullName</label>
            </div>
            }

            <div>
                <input name="SlotID" type="text" value="@Model.SlotID" style="visibility:hidden;">
            </div>

            <div class=" text-center">
                <input type="submit" value="Book" class="btn btn-primary" >

            </div>

        </form>

    

    </div>
</body>


